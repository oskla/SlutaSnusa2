<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".ScreenSlide30Fragment">

<com.google.android.material.card.MaterialCardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:checkable="true"
    android:focusable="true"
    app:cardBackgroundColor="@color/yellow"
    app:cardElevation="10dp"
    android:layout_marginVertical="15dp"

    android:layout_marginHorizontal="25dp"
    style="@style/Widget.App.CardView"
    android:gravity="center"
    >

    <TextView
        android:id="@+id/tw_achievment"
        style="?android:textAppearanceMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/montserrat_bold"
        android:text="30 dagar"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold" />

</com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:checkable="true"
        android:focusable="true"
        app:cardBackgroundColor="@color/yellow"
        app:cardElevation="10dp"
        android:layout_marginHorizontal="25dp"
        android:layout_marginBottom="20dp"
        style="@style/Widget.App.CardView"
        >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="20dp"
    >

    <TextView
        android:id="@+id/tw_daysLeftAchievement"
        style="?android:textAppearanceMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_bold"
        android:lineSpacingMultiplier="1.2"

        android:textAlignment="center"
        android:text="12"
        android:textColor="@color/black"
        android:textSize="90sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/daysLeftAchievement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_bold"
        android:text="dagar kvar till mål"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:translationY="-35dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:orientation="horizontal"

        >


        <ImageView
            android:id="@+id/arrowLeft"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:src="@drawable/vector_arrow_left" />

        <ImageView
            android:id="@+id/line"
            android:layout_width="wrap_content"
            android:layout_height="8dp"
            android:adjustViewBounds="true"
            android:layout_marginHorizontal="30dp"
            android:src="@drawable/line" />

        <ImageView
            android:id="@+id/arrowRight"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:src="@drawable/vector_arrow_right" />


    </LinearLayout>

    <TextView
            android:id="@+id/tw_moneySavedAchievement"
            style="?android:textAppearanceMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_bold"
            android:text="432"
            android:textColor="@color/black"
            android:textSize="90sp"
            android:textStyle="bold"
            />

    <TextView
        android:id="@+id/moneySavedAchievment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_bold"
        android:text="kronor sparat vid mål"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:translationY="-35dp"
        />

</LinearLayout>
    </com.google.android.material.card.MaterialCardView>


</LinearLayout>